{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": [
    "docs/.vitepress/**/*",
    "MusicPlayer/**/*",
    "shim-vue.d.ts",
    "images.d.ts",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}